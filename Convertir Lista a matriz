      "source": [
        "def lista_a_matriz_peso(L):\n",
        "  n = len(L)\n",
        "  matriz = [[np.nan]*n]*n\n",
        "  M = np.array(matriz)\n",
        "  for u in range(n):\n",
        "    for e,w in L[u]:\n",
        "      M[u][e] = w\n",
        "  return M"
      ],
