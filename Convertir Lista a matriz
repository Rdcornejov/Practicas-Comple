      "source": [
        "def lista_a_matriz(L):\n",
        "  n = len(L)\n",
        "  matriz = [[0]*n]*n\n",
        "  M = np.array(matriz)\n",
        "  for u in range(n):\n",
        "    for e in L[u]:\n",
        "      M[u][e] = 1\n",
        "  return M"
      ],
      "execution_count": 69,
      "outputs": []
